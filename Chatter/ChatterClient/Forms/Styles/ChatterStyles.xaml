<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- This style sets all ListBoxItem objects to use a grey stroke and light grey fill. -->
    <Style TargetType="ListBoxItem">
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="Background" Value="#FFADADAD" />
    </Style>

    <!-- This style sets Rectangle objects to use a grey stroke and light grey fill. -->
    <Style x:Key="ChatterRectangle" TargetType="Rectangle">
        <Setter Property="Stroke" Value="#FF5D5D5D" />
        <Setter Property="StrokeThickness" Value="3"/>
        <Setter Property="Fill" Value="#FFADADAD" />
    </Style>

    <!-- This style sets ListBox objects to use a grey stroke and light grey fill. -->
    <Style x:Key="ChatterListBox" TargetType="ListBox">
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="BorderBrush" Value="#FF5D5D5D" />
    </Style>

    <!-- This style sets TextBox objects to use a grey stroke and light grey fill. -->
    <Style x:Key="ChatterTextBox" TargetType="TextBox">
        <Setter Property="BorderThickness" Value="3,1,3,1"/>
        <Setter Property="BorderBrush" Value="#FF5D5D5D" />
    </Style>

    <!-- This style sets the Label title to use the above style, use the Segoe UI Black Bold font style, and align all contents to the center. -->
    <Style x:Key="ChatterTitle" TargetType="Label">
        <Setter Property="BorderBrush" Value="#FF5D5D5D" />
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="Background" Value="#FFADADAD" />
        <Setter Property="FontFamily" Value="Segoe UI Black" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <!-- This style sets a Button to use the same text style as the above. -->
    <Style x:Key="ChatterTitleButton" TargetType="Button">
        <Setter Property="BorderBrush" Value="#FF5D5D5D" />
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="Background" Value="#FFADADAD" />
        <Setter Property="FontFamily" Value="Segoe UI Black" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style x:Key="ChatterSendButton" BasedOn="{StaticResource ChatterTitleButton}" TargetType="Button">
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
</ResourceDictionary>