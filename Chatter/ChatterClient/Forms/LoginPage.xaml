<Window x:Class="ChatterClient.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatterClient"
        mc:Ignorable="d"
        Title="Chatter Login" Height="351" Width="390" ResizeMode="NoResize" Loaded="LoginPage_Loaded" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ChatterStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <Label Style="{StaticResource ChatterTitle}" x:Name="ChatterTitle" Content="Chatter" HorizontalAlignment="Center" VerticalAlignment="Top" Height="109" Width="328" FontSize="72" Margin="0,20,0,0"/>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Height="101" Width="254" Margin="0,143,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0*"/>
                <RowDefinition Height="44*"/>
                <RowDefinition Height="44*"/>
                <RowDefinition Height="44*"/>
                <RowDefinition Height="0*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130*"/>
                <ColumnDefinition Width="163*"/>
            </Grid.ColumnDefinitions>
            <Rectangle Style="{StaticResource ChatterRectangle}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.RowSpan="3" Grid.ColumnSpan="2" Margin="0,1,0,0" Grid.Row="1"/>
            <Label x:Name="ServerIPLabel" Content="Server IP Address:" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.204,0.627" Height="26" Width="104" Grid.Row="1"/>
            <TextBox x:Name="ServerIPBox" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="128" Height="18" Margin="5,0,0,0" Grid.Column="1" Grid.Row="1"/>
            <Label x:Name="ServerPortLabel" Content="Server Port:" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.204,0.627" Height="26" Width="106" Grid.Row="2"/>
            <TextBox x:Name="ServerPortBox" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="64" Height="18" Margin="5,0,0,0" Grid.Column="1" Grid.Row="2"/>
            <Label x:Name="UsernameLabel" Content="User Name:" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.204,0.627" Height="26" Width="106" Grid.Row="3"/>
            <TextBox x:Name="UsernameBox" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="128" Height="18" Margin="5,0,0,0" Grid.Column="1" Grid.Row="3"/>
        </Grid>
        <Button Style="{StaticResource ChatterTitleButton}" x:Name="LoginButton" Content="Log In" HorizontalAlignment="Center" VerticalAlignment="Top" Width="242" Height="42" Margin="0,259,0,0" Click="LoginButton_Click" />
    </Grid>
</Window>
